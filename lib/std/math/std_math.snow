    /**
    @function maxDouble
    @summary 返回两个 double 中较大的值
    */
    function: maxDouble
        params:
            declare lhs: double
            declare rhs: double
        returns: double
        body:
            if lhs >= rhs then
                return lhs
            else
                return rhs
            end if
        end body
    end function

