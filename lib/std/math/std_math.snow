        end body
    end function

    /**
    @function minDouble
    @summary 返回两个 double 中较小的值
    */
    function: minDouble
        params:
            declare lhs: double
            declare rhs: double
        returns: double
        body:
            if lhs <= rhs then
                return lhs
            else
                return rhs
            end if
        end body
    end function

