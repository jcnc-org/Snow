module: std_math

    /**
    @function compareDouble
    @summary 比较两个 double 值，返回 -1 / 0 / 1
    */
    function: compareDouble
        params:
            declare lhs: double
            declare rhs: double
        returns: int
        body:
            if lhs == rhs then
                return 0
            end if
            if lhs > rhs then
                return 1
            end if
            return -1
        end body
    end function

