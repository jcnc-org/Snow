module: ModuleStructureValidation
    import: std_io
    
    // 正确的顺序：结构体在globals之前
    struct: Point
        fields:
            declare x: int
            declare y: int

        init:
            params:
                xVal: int
                yVal: int
            body:
                this.x = xVal
                this.y = yVal
            end body
        end init

        function: getX
            returns: int
            body:
                return this.x
            end body
        end function
        
        function: getY
            returns: int
            body:
                return this.y
            end body
        end function
    end struct
    
    globals:
        declare globalCounter: int = 0

    function: main
        returns: void
        body:
            declare p: Point = new Point(10, 20)
            std_io.println("Point coordinates: (" + p.getX() + ", " + p.getY() + ")")
        end body
    end function
end module